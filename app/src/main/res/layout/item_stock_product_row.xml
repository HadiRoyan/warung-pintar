<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.divider.MaterialDivider
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/img_stock_product_row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="#D9D9D9" />

    <TextView
        android:id="@+id/tv_product_name_row"
        app:layout_constraintTop_toTopOf="@id/img_stock_product_row"
        app:layout_constraintStart_toEndOf="@id/img_stock_product_row"
        android:layout_marginStart="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="18sp"
        tools:text="Product Name"
        android:textStyle="bold" />

    <!--    Sale price-->
    <TextView
        android:id="@+id/tv_sale_price_row"
        app:layout_constraintStart_toStartOf="@id/tv_product_name_row"
        app:layout_constraintTop_toBottomOf="@id/tv_product_name_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Harga Jual:"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_sale_price_row_value"
        app:layout_constraintStart_toEndOf="@id/tv_sale_price_row"
        app:layout_constraintTop_toTopOf="@id/tv_sale_price_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="-"
        android:textSize="12sp"
        tools:text="Rp.1000" />
    <!--    End Sale price-->

    <!--    Buy price-->
    <TextView
        android:id="@+id/tv_buy_price_row"
        app:layout_constraintStart_toStartOf="@id/tv_product_name_row"
        app:layout_constraintTop_toBottomOf="@id/tv_sale_price_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Harga Beli:"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_buy_price_row_value"
        app:layout_constraintStart_toEndOf="@id/tv_buy_price_row"
        app:layout_constraintTop_toTopOf="@id/tv_buy_price_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="-"
        android:textSize="12sp"
        tools:text="Rp.1500" />

    <!--    End buy price-->

    <!--    Quantity of Products-->
    <TextView
        android:id="@+id/tv_total_product_row"
        app:layout_constraintStart_toStartOf="@id/tv_product_name_row"
        app:layout_constraintTop_toBottomOf="@id/tv_buy_price_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Jumlah Barang:"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_total_product_row_value"
        app:layout_constraintStart_toEndOf="@id/tv_total_product_row"
        app:layout_constraintTop_toTopOf="@id/tv_total_product_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="-"
        android:textSize="12sp"
        tools:text="0" />
    <!--    End Quantity of Products-->

    <!--    Entry date-->
    <TextView
        android:id="@+id/tv_entry_date_row"
        app:layout_constraintStart_toStartOf="@id/tv_product_name_row"
        app:layout_constraintTop_toBottomOf="@id/tv_total_product_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Tanggal Masuk:"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_entry_date_row_value"
        app:layout_constraintStart_toEndOf="@id/tv_entry_date_row"
        app:layout_constraintTop_toTopOf="@id/tv_entry_date_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="-"
        android:textSize="12sp"
        tools:text="01/01/23" />
</androidx.constraintlayout.widget.ConstraintLayout>